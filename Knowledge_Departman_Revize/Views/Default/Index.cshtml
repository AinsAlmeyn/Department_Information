@using Knowledge_Departman_Revize.Models;
@model List<Birim>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-
gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>BİRİMLER</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>DETAYLAR</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.BirimID</td>
            <td>@item.BirimAd</td>
            <td><a href="/Default/BirimSil/@item.BirimID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Default/BirimGetir/@item.BirimID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Default/BirimDetay/@item.BirimID" class="btn btn-default">Detaylar</a></td>
        </tr>
    }
</table>
<a href="/Default/YeniBirim/" class="btn btn-primary">Yeni Birimler</a>